#include <iostream>
using namespace std;
 struct ListNode {
      int val;
      ListNode *next;
      ListNode(int x) : val(x), next(NULL) {}
  };

class Solution {
public:
    ListNode* mergeTwoLists(ListNode* l1, ListNode* l2)
    {
    	if(l1 ==NULL)
        	return l2;
        if(l2 == NULL)
        	return l1;
        ListNode* firstOfList;
        ListNode* current = l2;
        if(l1->val >= l2->val)
        	firstOfList = l2;
        else
        	firstOfList = l1;
        int flag = false;
        while(l1 != NULL && l2 != NULL && flag == false)
        {
			while(l1->val >= l2->val)
			{
				if(l2->next == NULL)
				{
					l2->next = l1;
					flag = true;
					break;
				}
				current = l2;
				l2 = l2->next;
			}
			l1->next = current->next;
			current->next = l1;
			current = l1;
			l1 = l1->next;
        }
        return firstOfList;
    }
};

int main()
{
	cout<<"===="<<endl;
	Solution* s= new Solution();
	ListNode* l1 =new ListNode(2);
	ListNode* l2 = new ListNode(1);
	ListNode* result ;
	result =  s->mergeTwoLists(l1, l2);
	cout<<"===="<<endl;
	while(result != NULL)
	{
		cout<<result->val<<"\t";
		result = result->next;
	}
	return 0;
}
