#include"leetcode.h"

class MinStack {
public:
    void push(int x) {
    	min = min <= x? min:x;
    	s.push(x);
    }

    void pop() {
    	int top = 0, i = 0;
    	top = s.top();
    	s.pop();
    	if(s.size()){
    		if(min == top){
    			min = s[i];
    			while(i < s.size()){
    				min = min <= s[i]? min:s[i];
    				i++;
    			}
    		}
    	}
    }

    int top() {
    	return s.top();
    }

    int getMin() {
    	return min;
    }
private:
    stack<int> s;
    int min = 0;
};
