#include "leetcode.h"
/*
 * Given a singly linked list, determine if it is a palindrome.
 * Follow up:
 * Could you do it in O(n) time and O(1) space?
 */
 struct ListNode {
   int val;
   ListNode *next;
   ListNode(int x) : val(x), next(NULL) {}
 };

class Solution {
public:
	 ListNode *getIntersectionNode(ListNode *headA, ListNode *headB) {
		 if(headA == NULL || headB == NULL) return NULL;
		 ListNode* interNode, *slow, * fast;
		 slow = fast = headA;
		 while(headA->next!= NULL){
			 headA = headA->next;
		 }
    	 interNode = headA;
//		 headA->next = headB;
		 bool flag = false;
		 while(headB){
			 if(headB == headA){
				 flag = true;
				 break;
			 }
			headB =  headB->next;
		 }
		 if(flag){
			 headA->next = headB;
			 while(fast){
				 fast  = fast->next;
				 if(fast)
					 fast = fast->next;
				 slow = slow->next;
				 if(slow == fast){
					 while(headA != fast){
							headA = headA->next;
							fast = fast->next;
					  }
					 headB->next = NULL;
					  return headA;
				 }
			 }
		 }
		 if(headA == NULL || headB == NULL) return NULL;
	 }

	ListNode* creat(string str){
		ListNode *head,*first;
		int i = 0, len = str.length();
		if(len >= 1)
		{
			head = new ListNode(str[i]);
			first = head;
		}
		while((i+1)<len)
		{
			ListNode* listNode = new ListNode(str[i+1]);
			head->next = listNode;
			head = listNode;
			i++;
		}
		return first;
	}
};
int main()
{
	  Solution * s= new Solution();
	  ListNode * head ;
//	  while(head!=NULL)
//	  {
//		  cout<<char(head->val)<<endl;
//		  head = head->next;
//	  }
	  fstream in;
	  char buffer[256];
	  in.open("src/source/source/List/in.txt",ios::in);
	  if(in.is_open())
	  {
		  while(!in.eof())
		  {
			  in.getline(buffer,256);
			  head = s->creat(buffer);
//			  cout<<s->getIntersectionNode(head)<<endl;
		  }
	  }
	  return 0;
}
