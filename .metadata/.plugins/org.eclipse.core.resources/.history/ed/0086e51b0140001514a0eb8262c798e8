#include"leetcode.h"

class MinStack {
public:
    void push(int x) {
    	cout<<"x = "<<endl;
    	min = min <= x? min:x;
    	s.push(x);
    }

    void pop() {
    	int top = 0, i = 0;
    	top = s.top();
    	s.pop();
    	if(!s.empty()){
    		if(min == top){
    			min = s.top();
    			while(i < s.size()){
    				min = min <= s.top()? min:s.top();
    				s1.push(s.top());
    				s.pop();
    				i++;
    			}
    		}
    	}
    }

    int top() {
    	return s.top();
    }

    int getMin() {
    	return min;
    }
private:
    stack<int> s;
    stack<int> s1;
    int min;
};

int main(){
		stack<int> s;
		MinStack *m = new MinStack();
	    cout<<m->getMin()<<endl;
		int sum[] = {1,2,3,4,3,2,5};
	    for(int i = 0 ; i < 7;i++){
	    	m->push(sum[i]);
	    }
	    cout<<m->getMin()<<endl;
	    return 0;
}
