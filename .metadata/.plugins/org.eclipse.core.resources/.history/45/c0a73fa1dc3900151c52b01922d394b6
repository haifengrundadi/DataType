#include<vector>
#include<iostream>
#include <algorithm>
using namespace std;

class Solution {
public:
    vector<int> twoSum(vector<int>& nums, int target)
	{
    	vector<int> array(nums);
    	vector<int> array1;
    	int i=0, j = 0;
    	int len = nums.size();
    	sort(nums.begin(),nums.end());
    	int index1 = 0;
    	int index2 = nums.size() -1;
    	for(int i = 0;i <= index2;i++)
    		    	{
    		    		cout<<array[i]<<"\t";
    		    	}
    	cout<<endl;
    	for(int i = 0;i <= index2;i++)
        		    	{
        		    		cout<<nums[i]<<"\t";
        		    	}
    	while(index1 < index2)
    	{
    		if(nums[index1] + nums[index2] < target)
    			index1++;
    		else if(nums[index1] + nums[index2] > target)
    			index2--;
    		else
    		{
    			break;
    		}
    	}
    	for(i = 0;i <= len-1;i++)
    	{
    		if(array[i] == nums[index1])
    		{
    			array1.push_back(++i);
    			break;
    		}
    	}
    	cout<<index1<<"***0000***"<<index2<<endl;
    	for(j = 0;j<= len-1;j++)
    	 {
    	    		if(array[j] == nums[index2] && j!= i)
    	    		{
    	    			if(++j < i)
    	    			{
    	    				cout<<array[j-1]<<j<<"-#--"<<i<<"&&"<<endl;
    	    				array1.insert(array1.begin(),j);
    	    			}
    	    			else
    	    			{
    	    				cout<<array[j-1]<<j<<"---"<<i<<"&&"<<endl;
    	    				array1.push_back(j);
    	    			}
    	    			break;
    	    		}
    	 }

    	return array1;
    }
};
int main()
{
	vector<int> a;
	vector<int> b;
	a.push_back(0);
	a.push_back(4);
	a.push_back(3);
	a.push_back(0);
	/*a.push_back(150);
	a.push_back(24);
	a.push_back(79);
	a.push_back(50);
	a.push_back(88);
	a.push_back(345);
	a.push_back(3);*/
	Solution * s = new Solution();
	b = s->twoSum(a,0);

	int blen = b.size();
			for(int i = 0;i <= blen-1;i++)
	    	{
	    		cout<<b[i]<<"\t";
	    	}
	return 0;
};
