#include<iostream>
using namespace std;

struct ListNode {
     int val;
     ListNode *next;
     ListNode(int x) : val(x), next(NULL) {}
};
class Solution {
public:
	ListNode* addTwoNumbers(ListNode* l1, ListNode* l2)
	{
		if(l1 == NULL)
			return l2;
		if(l2 == NULL)
			return l1;
		int flag = 0;
		int sum = 0;
 		ListNode* fisrt, *tail,*current;
 		int k = 0;
		while(l1!=NULL && l2 != NULL)
		{
			sum = l1->val + l2->val + flag;
			flag = 0;
			if(sum >= 10)
			{
				flag = 1;
				sum = sum % 10;
			}
			current = new ListNode(sum);
			if( k == 0)
			{
				fisrt = current;
				tail = current;
				k = k+ 1;
			}else
			{
				tail->next = current;
				tail = current;
			}
			l1 = l1->next;
			l2= l2->next;
		}
		if(l1 == NULL && l2 != NULL)
		{
			l1 = l2;
		}
		while( l1!= NULL)
		{
			sum= l1->val + flag;
			flag = 0;
			if(sum >= 10)
			{
				flag = 1;
				sum= sum % 10;
				if(l1->next == NULL)
				{
					tail->next = new ListNode(1);
					return fisrt ;
				}
			}
			current = new ListNode(sum);
			tail->next = current;
			tail = current;
			l1 = l1->next;
		}
		return fisrt;
	}
};
int main()
{
	Solution *s = new Solution();
	ListNode * result;
	ListNode * current;
	ListNode * l1 =new ListNode(2);
	ListNode * l11 =new ListNode(4);
	l1->next = l11;
	ListNode * l2 =new ListNode(5);
	ListNode * l21 =new ListNode(6);
	ListNode * l22 =new ListNode(4);
	l2->next = l21;
	l21->next = l22;
	cout<<"------"<<endl;
	current = l1;
	while(current!= NULL)
		{
			cout<<current->val<<"->";
			current = current->next;
		}
	cout<<endl;
	current = l2 ;
		while(current!= NULL)
			{
				cout<<current->val<<"->";
				current = current->next;
			}
		cout<<endl;
	result = s->addTwoNumbers(l1,l2);
	cout<<"------"<<endl;
	while(result!= NULL)
	{
		cout<<result->val<<"\t";
		result = result->next;
	}
	return 0;
};



