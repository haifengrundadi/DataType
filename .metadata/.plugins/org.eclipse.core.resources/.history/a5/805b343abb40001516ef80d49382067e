#include "leetcode.h"

class Solution {
public:
	string count(string str)
	{
		string s = "";
		int i = 0;
		int len = str.length();
		for(i = 0; i < len; i++){
			if(str[i] == s[s.length() -1])
						s[s.length() - 2] += 1;
			else{
						s+= 1+'0';
						s+= str[i];
			}
		}

		return s;
	}
	string countAndSay(int n){
		if(n == 1) return "1";
		return count(countAndSay(n-1));
	 }
};

int main(){
	Solution * s= new Solution();
	for(int i = 1; i < 10; i++)
		cout<<s->countAndSay(i)<<endl;
	return 0;
}
