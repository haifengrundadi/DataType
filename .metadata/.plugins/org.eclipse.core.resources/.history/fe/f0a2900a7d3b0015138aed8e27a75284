class Solution {
public:
	int reverse(int x)
	{
		int len = ceil(log10(abs(x)));
		cout<<len<<endl;
		if(abs(x) < 10)
		{
			return x;
		}else{
			if(x <= -10)
			{

			}
		}
	}
};

int main()
{
	  Solution * s= new Solution();
	   char buffer[256];
	   int num = 0;
		fstream in;
		in.open("src/source/source/other/in.txt",ios::in);
		if(in.is_open())
		{
			 while (!in.eof())
			 {
				in.getline(buffer,256);
				num = atoi(buffer);
				cout<<num<<"--len--"<<ceil(log10(abs(num)))<<"--reverse--"<<s->reverse(11)<<endl;

			}
		}
	//cout<<s->reverse(11)<<endl;
	return 0;
}
