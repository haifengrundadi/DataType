#include<iostream>
#include<string>
#include<cmath>
#include<fstream>
#include <stdlib.h>
using namespace std;

class Solution {
public:
	int reverse(int x)
	{
		int flag = 1,result = 0;
		if(x < 0)
			flag = -1;
		int len = ceil(log10(abs(x)));
		if(abs(x) <= 1)
		{
			return x;
		}else{
			 x = abs(x);
			while(len)
			{
				result += (x % 10) * pow(10, len-1);
				x = x / 10;
				len--;
			}
		}
		return result*flag;
	}
};

int main()
{
	  Solution * s= new Solution();
	   char buffer[256];
	   int num = 0;
		fstream in;
		in.open("src/source/source/other/in.txt",ios::in);
		if(in.is_open())
		{
			 while (!in.eof())
			 {
				in.getline(buffer,256);
				num = atoi(buffer);
				cout<<num<<"--len--"<<ceil(log10(abs(num)))<<"--reverse \t"<<s->reverse(num)<<endl;

			}
		}
	//cout<<s->reverse(11)<<endl;
	return 0;
}
